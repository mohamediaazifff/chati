<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    style="@style/Theme.MaterialComponents.NoActionBar"
    tools:context=".Ui.Signup">
    <include
        android:id="@+id/navbar"
        layout="@layout/navbar"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/navbar"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="انشاء حساب جديد"
            android:textColor="#888"
            android:textSize="20sp"
            android:textStyle="bold"
            app:fontFamily="sans-serif" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="اسم المستخدم "
            android:padding="10dp"
            android:textColor="#000"
            android:textColorHint="#aaa"
            android:textSize="20sp"
            app:met_floatingLabel="normal" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="البريد الاكتروني"
            android:padding="10dp"
            android:textColor="#000"
            android:textColorHint="#aaa"
            android:textSize="20sp"
            app:met_floatingLabel="normal" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="كلمة السر"
            android:padding="10dp"
            android:textColor="#000"
            android:textColorHint="#aaa"
            android:textSize="20sp"
            app:met_floatingLabel="normal"
            app:met_maxCharacters="20"
            app:met_minCharacters="8" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnsignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:shadowColor="#00aacc"
            android:shadowDx="0"
            android:shadowDy="3"
            android:shadowRadius="7"
            android:text="التسجيل"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:backgroundTint="@color/colorPrimary"
            />


        <TextView
            android:id="@+id/txt_login_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:text="لديك حساب؟ الدخول"
            android:textColor="#888"
            android:textSize="20sp"
            android:textStyle="bold"
            app:fontFamily="sans-serif" />
    </LinearLayout>
</RelativeLayout>